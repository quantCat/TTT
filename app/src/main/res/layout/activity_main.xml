<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.teacher.myapplication.MainActivity">

    <Button
        android:text="Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bt00"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bt01"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bt00"
        android:layout_toEndOf="@+id/bt00" />

    <Button
        android:text="Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bt02"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bt01"
        android:layout_toEndOf="@+id/bt01" />

    <Button
        android:text="Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bt10"
        android:layout_below="@+id/bt00"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bt11"
        android:layout_below="@+id/bt01"
        android:layout_toRightOf="@+id/bt10"
        android:layout_toEndOf="@+id/bt10" />

    <Button
        android:text="Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bt12"
        android:layout_below="@+id/bt02"
        android:layout_toRightOf="@+id/bt11"
        android:layout_toEndOf="@+id/bt11" />

    <Button
        android:text="Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bt22"
        android:layout_below="@+id/bt12"
        android:layout_toRightOf="@+id/bt11"
        android:layout_toEndOf="@+id/bt11" />

    <Button
        android:text="Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bt21"
        android:layout_below="@+id/bt10"
        android:layout_toRightOf="@+id/bt10"
        android:layout_toEndOf="@+id/bt10" />

    <Button
        android:text="Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bt20"
        android:layout_below="@+id/bt10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Level"
        android:id="@+id/info_txt"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/bt22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seek_bar_level"
        android:layout_marginTop="18dp"
        android:max="2"
        android:layout_below="@+id/info_txt"
        android:layout_alignStart="@+id/info_txt"
        android:layout_alignEnd="@+id/bt_new_game" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pres button to start the game"
        android:id="@+id/game_result_txt"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/seek_bar_level"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <Button
        android:text="New Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_new_game"
        android:onClick="newGame"
        android:layout_marginTop="370dp"
        android:layout_below="@+id/seek_bar_level"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/bt21" />

</RelativeLayout>